{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "mode_modules/**/*",
    "**/*.spec.ts"
  ]
}
