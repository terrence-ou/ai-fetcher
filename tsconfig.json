{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "ES2022",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "emitDeclarationOnly": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "mode_modules",
    "dist",
    "src/__tests__/"
  ],
}
