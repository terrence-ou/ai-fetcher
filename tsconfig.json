{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "mode_modules",
    "dist"
  ]
}
