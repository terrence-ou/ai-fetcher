{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "mode_modules/**/*",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
